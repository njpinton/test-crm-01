# Django Settings
DJANGO_SETTINGS_MODULE=config.settings.development
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For local development with SQLite (default)
# DATABASE_URL=sqlite:///db.sqlite3

# For local development with PostgreSQL via Cloud SQL Proxy
# DATABASE_URL=postgresql://username:password@localhost:5432/crm_db

# For production (Cloud Run)
# CLOUD_SQL_CONNECTION_NAME=project:region:instance
# DATABASE_NAME=crm_db
# DATABASE_USER=postgres
# DATABASE_PASSWORD=your-database-password

# Google Cloud Storage (Production only)
# GS_BUCKET_NAME=crm-uploads-prod
# GS_STATIC_BUCKET_NAME=crm-static-prod
# GS_MEDIA_BUCKET_NAME=crm-media-prod
# GS_PROJECT_ID=your-gcp-project-id

# Gmail API Configuration (for sending emails in production)
# GMAIL_CLIENT_ID=your-gmail-client-id
# GMAIL_CLIENT_SECRET=your-gmail-client-secret
# GMAIL_REFRESH_TOKEN=your-gmail-refresh-token

# Sentry (Error Tracking - Optional)
# SENTRY_DSN=your-sentry-dsn

# CORS Settings (if needed)
# CORS_ALLOWED_ORIGINS=https://yourapp.run.app
